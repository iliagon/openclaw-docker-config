{
  "gateway": {
    "mode": "local",
    "port": 18789
  },

  "channels": {
    "telegram": {
      "enabled": true,
      "botToken": "${TELEGRAM_BOT_TOKEN}",
      "dmPolicy": "pairing",
      "groupPolicy": "allowlist",
      "streamMode": "partial"
    }
  },

  "plugins": {
    "entries": {
      "telegram": {
        "enabled": true
      }
    }
  },

  "agents": {
    "defaults": {
      "model": {
        "primary": "anthropic/claude-opus-4-6"
      },
      "compaction": {
        "mode": "safeguard"
      },
      "maxConcurrent": 2,
      "subagents": {
        "maxConcurrent": 4
      }
    }
  },

  "commands": {
    "native": "auto",
    "nativeSkills": "auto"
  },

  "messages": {
    "ackReactionScope": "group-mentions"
  },

  "auth": {
    "profiles": {
      "anthropic:manual": {
        "provider": "anthropic",
        "mode": "token"
      }
    },
    "order": {
      "anthropic": ["anthropic:manual"]
    }
  },

  "logging": {
    "level": "info",
    "consoleLevel": "info",
    "redactSensitive": "tools"
  }
}
