# ─── Anthropic ────────────────────────────────────────────────────────────────
# console.anthropic.com → API Keys
ANTHROPIC_API_KEY=

# ─── Telegram ─────────────────────────────────────────────────────────────────
# Telegram @BotFather → /newbot
TELEGRAM_BOT_TOKEN=

# ─── OpenClaw Gateway ─────────────────────────────────────────────────────────
# Generate: openssl rand -hex 32
OPENCLAW_GATEWAY_TOKEN=
OPENCLAW_GATEWAY_PORT=18789
OPENCLAW_GATEWAY_BIND=0.0.0.0

# ─── GitHub ───────────────────────────────────────────────────────────────────
# github.com/settings/tokens → Fine-grained or Classic PAT
# Scopes needed: repo, workflow, read:org (for the github skill: PRs, issues, CI)
GH_TOKEN=

# ─── Brave Search ─────────────────────────────────────────────────────────────
# brave.com/search/api (free tier)
BRAVE_SEARCH_API_KEY=

# ─── GHCR (GitHub Container Registry) ─────────────────────────────────────────
# github.com/settings/tokens — Classic PAT with: read:packages, repo
# Used for: pulling images from GHCR + openclaw state git sync
GHCR_USERNAME=
GHCR_TOKEN=

# ─── Openclaw State Git Sync ──────────────────────────────────────────────────
# All of ~/.openclaw (except credentials/) is cloned from this repo on start
# and pushed back on a schedule. Uses GHCR_TOKEN for auth.
GIT_WORKSPACE_REPO=your-username/openclaw-workspace
GIT_WORKSPACE_BRANCH=auto
# Cron schedule: minute hour day month weekday (default: daily at 4 AM UTC)
GIT_WORKSPACE_SYNC_SCHEDULE=0 4 * * *
