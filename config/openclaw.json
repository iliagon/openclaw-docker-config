{
  "gateway": {
    "mode": "local",
    "port": 18789,
    "trustedProxies": ["0.0.0.0/0"],
    "auth": {
      "mode": "token"
    },
    "controlUi": {
      "allowedOrigins": [
        "https://d2c1ue2o85h4id.cloudfront.net"
      ]
    }
  },

  "channels": {
    "telegram": {
      "enabled": true,
      "botToken": "${TELEGRAM_BOT_TOKEN}",
      "dmPolicy": "open",
      "allowFrom": ["*"],
      "groupPolicy": "allowlist",
      "streamMode": "partial"
    }
  },

  "plugins": {
    "entries": {
      "telegram": {
        "enabled": true
      }
    }
  },

  "agents": {
    "defaults": {
      "model": {
        "primary": "openai-codex/gpt-5.3-codex"
      },
      "compaction": {
        "mode": "safeguard"
      },
      "maxConcurrent": 2,
      "subagents": {
        "maxConcurrent": 4
      }
    }
  },

  "tools": {
    "media": {
      "audio": {
        "enabled": true,
        "maxBytes": 20971520,
        "models": [
          {
            "type": "cli",
            "command": "whisper",
            "args": ["--model", "base", "{{MediaPath}}"],
            "timeoutSeconds": 45
          }
        ]
      }
    }
  },

  "commands": {
    "native": "auto",
    "nativeSkills": "auto"
  },

  "messages": {
    "ackReactionScope": "group-mentions"
  },

  "auth": {
    "order": {
      "openai-codex": ["openai-codex:default"]
    }
  },

  "logging": {
    "level": "info",
    "consoleLevel": "info",
    "redactSensitive": "tools"
  }
}
